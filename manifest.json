{
  "manifest_version": 2,

  "name": "Transmogrify for Plex",
  "description": "Adds several features to the Plex/Web 2.0 client for Plex",
  "version": "0.2.4",
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["http://plex.tv/*", "https://plex.tv/*"],
      "css": ["css/transmogrify.css"],
      "js": ["options.js", "main.js", "plugins/letterboxd.js", "plugins/youtube_trailer.js", "plugins/random.js"]
    }
  ],
  "permissions": [
    "storage",
    "http://*/"
  ],
  "icons": { "16": "resources/icon16.png",
             "48": "resources/icon48.png",
             "128": "resources/icon128.png"
  }
}