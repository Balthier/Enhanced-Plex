{
  "manifest_version": 2,
  "name": "Enhanced Plex",
  "description": "Adds several features to the Plex/Web 4.0 client for Plex",
  "version": "2.0.0",
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://app.plex.tv/desktop*",
        "http://app.plex.tv/desktop*",
        "https://*/web*",
        "http://*/web*"
      ],
      "run_at": "document_end",
      "css": [
        "css/transmogrify.css"
      ],
      "js": [
        "utils.js",
        "apis/themoviedb.js",
        "apis/trakt.js",
        "plugins/missing_episodes.js",
        "plugins/stats.js",
        "plugins/themoviedb.js",
        "plugins/trakt.js",
        "plugins/tvdb.js",
        "main.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "storage",
    "https://app.plex.tv/desktop*",
    "http://app.plex.tv/desktop*",
    "https://*/web*",
    "http://*/web*"
  ],
  "icons": {
    "16": "resources/icon16.png",
    "48": "resources/icon48.png",
    "128": "resources/icon128.png"
  },
  "web_accessible_resources": [
    "resources/*",
    "options.html",
    "stats.html"
  ]
}